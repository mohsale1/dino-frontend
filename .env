# =============================================================================
# DINO - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all environment variables for the Dino application.
# Copy this file to .env.local for local development and customize as needed.

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application Environment (development, staging, production)
REACT_APP_ENV=development

# Application Name and Version
REACT_APP_NAME=Dino
REACT_APP_VERSION=1.0.0

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Theme Toggle Feature
# Controls whether the dark/light mode toggle button is visible in the UI
# Set to 'true' to show theme toggle, 'false' to hide it
# Default: true (theme toggle is visible)
REACT_APP_ENABLE_THEME_TOGGLE=false

# Demo Mode Feature
# Enables demo login functionality for testing purposes
# Set to 'true' to enable demo mode, 'false' to disable
# Default: true (demo mode enabled)
REACT_APP_ENABLE_DEMO_MODE=true

# Advanced Analytics Feature
# Enables advanced analytics and reporting features
# Set to 'true' to enable analytics, 'false' to disable
# Default: false (analytics disabled)
REACT_APP_ENABLE_ANALYTICS=false

# QR Code Generation Feature
# Enables QR code generation for tables and menus
# Set to 'true' to enable QR codes, 'false' to disable
# Default: true (QR codes enabled)
REACT_APP_ENABLE_QR_CODES=true

# Real-time Notifications Feature
# Enables real-time notifications for orders and updates
# Set to 'true' to enable notifications, 'false' to disable
# Default: true (notifications enabled)
REACT_APP_ENABLE_NOTIFICATIONS=true

# Multi-language Support Feature
# Enables multi-language support in the application
# Set to 'true' to enable i18n, 'false' to disable
# Default: false (single language)
REACT_APP_ENABLE_I18N=false

# =============================================================================
# API CONFIGURATION
# =============================================================================

# Backend API Base URL
# The base URL for all API calls to the backend server
# Development: Direct backend URL for local development
# Production: /api/v1 (proxied through nginx)
# Note: In development, we call the backend directly. In production, nginx proxies.
REACT_APP_API_BASE_URL=localhost:8000

# API Timeout (in milliseconds)
# Maximum time to wait for API responses
# Default: 30000 (30 seconds)
REACT_APP_API_TIMEOUT=30000

# API Rate Limiting
# Maximum number of API requests per minute
# Default: 100 requests per minute
REACT_APP_API_RATE_LIMIT=100

# WebSocket URL
# The URL for WebSocket connections (proxied through nginx)
# Development: /ws (proxied through nginx)
# Production: /ws (proxied through nginx)
REACT_APP_WS_URL=/ws

# Backend URL (for nginx proxy configuration)
# This is the actual backend URL that nginx will proxy to
REACT_APP_BACKEND_URL=localhost:8000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================

# Client-Side Password Hashing
# This salt MUST match the CLIENT_PASSWORD_SALT in backend
# CRITICAL: Change this value in production!
REACT_APP_PASSWORD_SALT=dino-secure-salt-2024-change-in-production

# JWT Token Expiry (in hours)
# How long authentication tokens remain valid
# Default: 24 hours
REACT_APP_JWT_EXPIRY_HOURS=24

# Session Timeout (in minutes)
# How long user sessions remain active without activity
# Default: 60 minutes
REACT_APP_SESSION_TIMEOUT_MINUTES=60

# Password Requirements
# Minimum password length for user accounts
# Default: 8 characters
REACT_APP_MIN_PASSWORD_LENGTH=8

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Google Analytics Tracking ID
# For website analytics and user behavior tracking
# Leave empty to disable Google Analytics
REACT_APP_GOOGLE_ANALYTICS_ID=

# Stripe Public Key
# For payment processing (use test key for development)
# Get from: https://dashboard.stripe.com/apikeys
REACT_APP_STRIPE_PUBLIC_KEY=

# Firebase Configuration
# For real-time features and push notifications
REACT_APP_FIREBASE_API_KEY=
REACT_APP_FIREBASE_AUTH_DOMAIN=
REACT_APP_FIREBASE_PROJECT_ID=
REACT_APP_FIREBASE_STORAGE_BUCKET=
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=
REACT_APP_FIREBASE_APP_ID=

# Sentry DSN
# For error tracking and monitoring
# Get from: https://sentry.io/
REACT_APP_SENTRY_DSN=

# =============================================================================
# UI/UX CONFIGURATION
# =============================================================================

# Default Theme Mode
# The default theme when users first visit the application
# Options: 'light', 'dark', 'system' (follows system preference)
# Default: 'light'
REACT_APP_DEFAULT_THEME=light

# Animation Settings
# Controls whether UI animations are enabled
# Set to 'true' to enable animations, 'false' to disable
# Default: true (animations enabled)
REACT_APP_ENABLE_ANIMATIONS=true

# Debug Mode
# Enables additional debugging information in the console
# Set to 'true' for development, 'false' for production
# Default: false (debug disabled)
REACT_APP_DEBUG_MODE=false

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================

# Image Optimization
# Enables automatic image optimization and lazy loading
# Set to 'true' to enable optimization, 'false' to disable
# Default: true (optimization enabled)
REACT_APP_ENABLE_IMAGE_OPTIMIZATION=true

# Service Worker
# Enables service worker for offline functionality
# Set to 'true' to enable PWA features, 'false' to disable
# Default: true (PWA enabled)
REACT_APP_ENABLE_SERVICE_WORKER=true

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Hot Reload
# Enables hot reloading during development
# Set to 'true' to enable hot reload, 'false' to disable
# Default: true (hot reload enabled)
REACT_APP_ENABLE_HOT_RELOAD=true

# Source Maps
# Generates source maps for debugging
# Set to 'true' to generate source maps, 'false' to disable
# Default: true (source maps enabled)
REACT_APP_GENERATE_SOURCEMAP=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log Level
# Controls the level of logging output
# Options: 'error', 'warn', 'info', 'debug'
# Default: 'info'
REACT_APP_LOG_LEVEL=info

# Enable Console Logging
# Controls whether logs are output to the browser console
# Set to 'true' to enable console logs, 'false' to disable
# Default: true (console logging enabled)
REACT_APP_ENABLE_CONSOLE_LOGGING=true

# =============================================================================
# NOTES
# =============================================================================
# 
# 1. All environment variables for React must start with REACT_APP_
# 2. Changes to this file require a restart of the development server
# 3. Never commit sensitive information like API keys to version control
# 4. Use .env.local for local overrides (this file is gitignored)
# 5. For production, set these variables in your hosting platform
# 
# =============================================================================